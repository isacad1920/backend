#############################################
# SOFinance Backend Environment Variables   #
#############################################

# --- Core Application ---
ENVIRONMENT=DEV  # DEV | STAGING | PROD
APP_NAME=SOFinance POS System
APP_VERSION=1.0.0
DEBUG=true  # Set to false in PROD

# --- Database ---
DATABASE_URL=postgresql://username:password@localhost:5432/sofinance_db

# --- Security / JWT ---
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_STRING  # Generate: python -c "import secrets; print(secrets.token_urlsafe(64))"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS ---
BACKEND_CORS_ORIGINS=http://localhost:5173

# --- Redis (optional) ---
REDIS_URL=redis://localhost:6379/0

# --- Email (optional) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# --- File Uploads ---
UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=10

# --- Company Info ---
COMPANY_NAME=SOFinance Company
COMPANY_EMAIL=info@sofinance.com
COMPANY_PHONE=+1234567890
COMPANY_ADDRESS=123 Business Street
BASE_CURRENCY=USD
TIMEZONE=UTC

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# --- Feature Flags ---
ENABLE_MULTI_CURRENCY=true
ENABLE_BRANCH_ORDERS=true
ENABLE_CUSTOMER_LOYALTY=false
ENABLE_INVENTORY_FORECASTING=false
ENABLE_AUDIT_LOGGING=true
ENABLE_REPORTS=true
ENABLE_NOTIFICATIONS=true

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# --- Backups ---
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# --- Audit ---
AUDIT_RETENTION_DAYS=365

# --- Inventory Thresholds ---
DEFAULT_LOW_STOCK_THRESHOLD=10
DEAD_STOCK_DAYS_THRESHOLD=90

# --- Sessions ---
SESSION_TIMEOUT_MINUTES=480
MAX_CONCURRENT_SESSIONS=5

# SECURITY NOTES:
# - Always change SECRET_KEY in production and keep it secret.
# - Use a managed PostgreSQL instance; never commit real DATABASE_URL.
# - Set DEBUG=false and LOG_LEVEL=INFO|WARNING in production.
# - Restrict BACKEND_CORS_ORIGINS to trusted domains.
# - Consider enabling structured JSON logging via environment if supported.
